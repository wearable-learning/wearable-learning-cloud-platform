<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout">
	<Popover showHeader = "true" title="{i18n>gameEditor.switchScreen.title}" class="sapMOTAPopover sapTntToolHeaderPopover" placement="Bottom">
		<l:HorizontalLayout class="sapUiSmallMargin">
			<Button class="switchButton" type="Accept" text="{i18n>mode.gameManager}" press="switchToManager">
					
			</Button>
		</l:HorizontalLayout>
		<l:HorizontalLayout class="sapUiSmallMargin">
			<Button class="switchButton" type="Accept" text="{i18n>mode.gamePlayer}" press="switchToPlayer">
					
			</Button>
		</l:HorizontalLayout>
		<tnt:ToolHeader>
		</tnt:ToolHeader>
	</Popover>
</core:FragmentDefinition>